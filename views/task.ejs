<h1 class="mt-4">TASK</h1>
<h2 class="lead mb-3 bg-primary">Welcome <%= user.name %></h2>

<div class="row mt-5">
    <% if (details != null) { %> <% details.forEach(detail => { %>
    <h4><%= detail.title %></h4><br>
    <h5><%= detail.description %></h5>
    <% }); %> <% } else {%>
    <h2>No data available</h2>
    <% } %>
</div>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-tasks"></i>MY TASK</h1>

            <%- include('./partials/messages') %>

            <form action="/task" method="POST">
                <div class="md-form">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" class="form-control" placeholder="Enter title"
                        value="<%= typeof title != 'undefined' ? title : '' %>" />
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Description</label>
                    <textarea class="form-control rounded-0" id="exampleFormControlTextarea1" rows="10"
                        name="description"
                        value="<%= typeof description != 'undefined' ? description : '' %>"></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">
                    Add TASK
                </button>
            </form>
        </div>
    </div>
</div>